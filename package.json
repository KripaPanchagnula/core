		"@typescript-eslint/parser": "^5.31.0",
		"eslint": "^8.20.0",
		"prettier": "^2.7.1",
		"prettier-eslint": "^15.0.1",
		"typescript": "^4.7.4"
	},
	"prettier": "@bridge-tools/config/prettier.json",
	"repository": {
		"type": "git",
		"url": "https://github.com/bridge-tools/core.git"
	},
